<!-- res/values/styles.xml -->
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#703d38</item>
        <item name="android:fontFamily">@font/od_regular</item>
    </style>

    <!-- Text Styles -->
    <style name="TextStyleLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">#703d38</item>
        <item name="android:fontFamily">@font/od_regular</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">#703d38</item>
        <item name="android:fontFamily">@font/od_regular</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#703d38</item>
        <item name="android:fontFamily">@font/od_regular</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:fontFamily">@font/od_regular</item>
    </style>

    <!-- EditText Styles -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">#703d38</item>
        <item name="android:textColorHint">#703d38</item>
        <item name="android:fontFamily">@font/od_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:inputType">text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- ImageButton Styles -->
    <style name="ImageButtonStyle">
        <item name="android:layout_width">@dimen/image_button_size</item>
        <item name="android:layout_height">@dimen/image_button_size</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@drawable/send</item>
        <item name="android:contentDescription">@string/send_message</item>
    </style>

</resources>
